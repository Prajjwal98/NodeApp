div.v-pop-stage(@mousemove.prevent = 'mouseMove')
	div.bg
	div.pop
		header(@mousedown = 'mouseDown', @mouseup.prevent = 'mouseUp')
			| {{headername}}
			span.close(@click = 'hide')
				i.fa.fa-times
		article
			slot(name = 'body')
		footer
			a.btn.btn-primary(@click = 'ok') {{okbtnname}}
			a.btn.btn-default.m-l-10(
				:class = 'poptype == "alert" ? "hide" : ""'
				@click = 'cancel'
			) {{nobtnname}}