div.tabpanel
    div.tab(v-for="li in list", @click="$parent.tabClick($index)", :class="{'active':index == $index}") 
        div.tab-title {{ li.title }}
        div.arrow.arrow-down(v-if="index == $index")
    div.panel(v-for="li in list", v-show="index == $index")
        slot(:name="li.component")