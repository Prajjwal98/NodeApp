tr
    for column in columns
        - var sty = column.maxWidth ? ('max-width:' + column.maxWidth) : '';
        if column.key
            if sty
                td(style="#{ sty }") #{ data[column.key] }
            else
                td #{ data[column.key] }
        else if column.type === 'action'
            td
                span.btn.btn-primary(data-action="#{ column.action }") #{ column.value }